<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">
    
<struts>
	<package name="default" extends="struts-default">
	<!-- For the user to be logged in and able to access the patient.  -->
		<action name="login" class="controller.Login">
			<result name="success">/portal.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<!-- Logouts the user. -->
		<action name="logout" class="controller.Login" method="logout">
			<result name="success">/index.jsp</result>
		</action>
		
		<!-- REGISTER -->
		
		<!-- Admin Profile -->
		<action name="profile" class="controller.Profile">  
			<result name="success" >/portal.jsp</result>  
			<result name="error" >/index.jsp</result>  
		</action>  
		
		<!-- Patient registration -->
		<action name="registerPatient" class="controller.RegisterAction" method="part1To2">  
			<result name="success" >/patientContact.jsp</result>  
			<result name="error" >/error.jsp</result>  
		</action>
		<action name="registerPatientBackButton" class="controller.RegisterAction" method="part2To1">  
			<result name="success" >/register.jsp</result>  
			<result name="error" >/error.jsp</result>  
		</action>   

		
		<!-- PRINTING ID -->
		<action name="printCard" class="controller.PrintAction">
			<result name = "success">/portal.jsp</result>
			<result name = "error">/error.jsp</result>
		</action>
		
		<!-- UPLOADING FILE -->
		<action name="uploadAction" class="controller.FileUploadAction">
	    <interceptor-ref name="exception"/>
            <interceptor-ref name="i18n"/>
            <interceptor-ref name="fileUpload">
       		<param name="allowedTypes">text/plain</param>
       		<param name="maximumSize">10240</param>
  	    </interceptor-ref> 
            <interceptor-ref name="params">
                <param name="excludeParams">dojo\..*,^struts\..*</param>
            </interceptor-ref>
            <interceptor-ref name="validation">
                <param name="excludeMethods">input,back,cancel,browse</param>
            </interceptor-ref>
            <interceptor-ref name="workflow">
                <param name="excludeMethods">input,back,cancel,browse</param>
            </interceptor-ref>
    
	    <result name="success">/medicalStatus.jsp</result>
	    <result name="input">/fileupload.jsp</result>
	    <result name = "error">/error.jsp</result>
			
	</action>
		
	</package>
</struts>